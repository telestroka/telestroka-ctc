require_once('utils/sql.class');

class News extends Sql
{
	//конструктор
	function News()
	{
		$this->SqlConnect();

		$this->sqlQuery = 'CREATE TABLE IF NOT EXISTS news (
															  id int(11) NOT NULL auto_increment,
															  text text NOT NULL,
															  date date NOT NULL default "0000-00-00",
															  PRIMARY KEY id (id)
														   ) TYPE=MyISAM;';
		$this->SqlExecute();
		return TRUE;
	}
}
