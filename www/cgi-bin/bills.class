require_once('utils/sql.class');

class Bills extends Sql
{

	//конструктор
	function Bills()
	{
		$this->SqlConnect();

		$this->sqlQuery = 'CREATE TABLE IF NOT EXISTS string_bills(  id bigint(20) NOT NULL auto_increment,
                                                              sid varchar(255) NOT NULL default "",
															  pay varchar(255) NOT NULL default "",
															  rub varchar(255) NOT NULL default "",
															  kop varchar(255) NOT NULL default "",
															  PRIMARY KEY id (id)
						  									) TYPE=MyISAM;';
		$this->SqlExecute();
		return TRUE;
	}

    function BillsGetBillInfo($sid)
    {
		$sid = $this->SqlPrepare($sid);
		$info = array();
		$this->sqlQuery = 'select * from string_bills where sid="' . $sid . '"';
		$this->SqlExecute();
        while ($row = mysql_fetch_array($this->sqlRes))
        {
            $info = $row;
        }
		return $info;
    }
}
